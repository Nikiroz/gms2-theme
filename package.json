{
  "name": "gms2theme",
  "displayName": "GameMaker studio 2 theme",
  "description": "GameMaker Studio 2 colors for VSCode",
  "publisher": "nibel",
  "version": "0.0.2",
  "engines": {
    "vscode": "*"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Nikiroz/gms2-theme/"
  },
  "categories": [
    "Themes",
    "Snippets",
    "Keymaps"
  ],
  "icon": "icon.png",
  "contributes": {
    "themes": [
      {
        "label": "GameMaker Studio 2 Theme",
        "uiTheme": "vs-dark",
        "path": "./themes/gms2-theme.json"
      }
    ],
    "snippets": [
      {
        "language": "gml",
        "path": "./snippets/gml-snippets.json"
      }
    ],
    "grammars": [
      {
        "language": "yy",
        "scopeName": "source.yyp",
        "path": "./syntaxes/yyp.tmLanguage.json"
      },
      {
        "language": "gml",
        "scopeName": "source.gml",
        "path": "./syntaxes/gml.tmLanguage.json"
      }
    ],
    "keybindings": [
      {
        "key": "f4 f4",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus"
      },
      {
        "key": "f4 1",
        "command": "editor.action.insertSnippet",
        "args": {
          "name": "GML block"
        },
        "when": "editorTextFocus"
      },
      {
        "key": "f4 2",
        "command": "editor.action.insertSnippet",
        "args": {
          "name": "GML if"
        },
        "when": "editorTextFocus"
      },
      {
        "key": "f4 3",
        "command": "editor.action.insertSnippet",
        "args": {
          "name": "GML if-else"
        },
        "when": "editorTextFocus"
      },
      {
        "key": "f4 4",
        "command": "editor.action.insertSnippet",
        "args": {
          "name": "GML for-loop reverce"
        },
        "when": "editorTextFocus"
      },
      {
        "key": "f4 5",
        "command": "editor.action.insertSnippet",
        "args": {
          "name": "GML for-loop"
        },
        "when": "editorTextFocus"
      },
      {
        "key": "f4 6",
        "command": "editor.action.insertSnippet",
        "args": {
          "name": "GML while-loop"
        },
        "when": "editorTextFocus"
      },
      {
        "key": "f4 7",
        "command": "editor.action.insertSnippet",
        "args": {
          "name": "GML do-until"
        },
        "when": "editorTextFocus"
      },
      {
        "key": "f4 8",
        "command": "editor.action.insertSnippet",
        "args": {
          "name": "GML repeat"
        },
        "when": "editorTextFocus"
      },
      {
        "key": "f4 9",
        "command": "editor.action.insertSnippet",
        "args": {
          "name": "GML switch"
        },
        "when": "editorTextFocus"
      },
      {
        "key": "f4 c",
        "command": "editor.action.insertSnippet",
        "args": {
          "name": "GML comment"
        },
        "when": "editorTextFocus"
      },
      {
        "key": "f4 m",
        "command": "editor.action.insertSnippet",
        "args": {
          "name": "GML multi-line comment"
        },
        "when": "editorTextFocus"
      },
      {
        "key": "f4 r",
        "command": "editor.action.insertSnippet",
        "args": {
          "name": "GML region"
        },
        "when": "editorTextFocus"
      },
      {
        "key": "f4 s",
        "command": "editor.action.insertSnippet",
        "args": {
          "name": "GML array sort"
        },
        "when": "editorTextFocus"
      },

      {
        "key": "ctrl+k",
        "command": "editor.action.commentLine",
        "when": "editorTextFocus && editorHasSelection"
      },
      {
        "key": "ctrl+shift+k",
        "command": "editor.action.removeCommentLine",
        "when": "editorTextFocus && editorHasSelection"
      }
    ]
  }
}